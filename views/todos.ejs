<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos page</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
</head>
<body>

    <section class="section">
        <div class="container">
            <div class="columns is-multiline">
                <div class="column is-12-mobile is-6-tablet is-4-desktop"></div>
                  <div class="column is-12">
                    <h1 class="title">Todos</h1>
                        <ul>
                            <% todos.forEach(el => {
                                <li class="todoItem" data-id="<%el._id %>">
                                    <span class='<%= el.completed === true ? "completed" : "not" %>'>
                                        <%= el.todo %>
                                    </span>
                                    <span class="delete">delete</span>
                                </li>
                            }) %>                        
                        </ul>
                  </div>
                  <div class="column is-12">
                      <h2>Things left to do: <% left %></h2>
                  </div>
            </div>
        </div>
    </section>
    
    <section class="section">
        <div class="container">
            <form action="/todos/createTodo" method="POST">
                <label for="todoItem">Enter your todo item</label>
                <input type="text" placeholder="enter your todo" name="todoItem" id="todoItem">
                <button type="submit">Submit</button>
            </form>
        </div>
    </section>

    <script src="main.js"></script>
</body>
</html>